<div class="container">
  <div class="row">
    <div class="col mt-4">
      <h2 class="mb-4">Edit Contact Form</h2>

      <!-- TODO: Jika isi dari var error bukan undefined / ada isinya, maka akan masuk ke pengkondisian. -->
      <% if(typeof errors != 'undefined') {%>
      <div class="alert alert-danger" role="alert">
        <ul>
          <h3>Errors :</h3>
          <!-- * Melakukan pengulangan li, karena errornya tidak menentu. maka dilakukan pengulangan forEach dan var errors itu bertipe data array. -->
          <!-- ! var errors akan melakukan pengulangan sesuai isi dari urutan index array -->
          <% errors.forEach(error => { %>
          <!-- * Melakukan pengulangan sesuai dengan isi dari object error.msg .-->
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <form method="post" action="/contact?_method=PUT">
        <input type="hidden" name="_id" value="<%= contacts._id %>" />
        <!-- cadangan nama lama -->
        <!-- kalau contacts.oldNama false maka akan yang digunakan adalah contacts.nama -->
        <input type="hidden" name="oldNama" value="<%= contacts.oldNama || contacts.nama %>" />
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input type="text" class="form-control" id="nama" name="nama" required value="<%= contacts.nama %>" />
        </div>
        <div class="mb-3">
          <label for="nohp" class="form-label">Num Phone</label>
          <input type="number" class="form-control" id="noHp" name="noHp" required value="<%= contacts.noHp %>" />
        </div>
        <div class="mb-5">
          <label for="nama" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="email" required value="<%= contacts.email %>" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>
